{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "sourceMap": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "isolatedModules": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "Components/*": ["./src/components/*"],
      "Icons/*": ["./src/icons/*"],
      "Hooks/*": ["./src/hooks/*"],
      "Utils/*": ["./src/utils/*"],
      "Test/*": ["./test/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "definitions.d.ts"],
  "exclude": ["src/**/*.spec.tsx", "src/**/*.stories.tsx", "src/mpc/*"]
}
