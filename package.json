{
  "name": "@vinderman/ui-components",
  "version": "1.0.2",
  "scripts": {
    "build": "rm -rf dist && vite build && npm run ts-compile",
    "ts-compile": "tsc -p tsconfig.json && tscpaths -p tsconfig.json -s ./src",
    "build-storybook": "storybook build -o public",
    "storybook": "storybook dev -p 6006",
    "build-tokens": "rm -rf dist/themes && ts-node themes/build/index.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint --ext .tsx,.ts --ignore-pattern node_modules/ ./src/",
    "fix": "eslint --fix --ext .tsx,.ts --ignore-pattern node_modules/ ./src/",
    "prettier-check": "prettier --check **/*.{ts,tsx}",
    "prettier-fix": "prettier --write **/*.{ts,tsx}",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{tsx,ts}": [
      "eslint --ext .tsx,.ts",
      "prettier --check",
      "npm run ts-compile"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/vinderman/ui-components.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": "16.0.0"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "peerDependencies": {
    "@tanstack/react-table": "^8.9.3",
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@floating-ui/react": "^0.18.1",
    "@popperjs/core": "^2.11.6",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@storybook/addon-a11y": "^7.0.6",
    "@storybook/addon-actions": "^7.0.6",
    "@storybook/addon-essentials": "^7.0.6",
    "@storybook/addon-interactions": "^7.0.6",
    "@storybook/addon-links": "^7.0.6",
    "@storybook/addon-mdx-gfm": "^7.0.6",
    "@storybook/manager-api": "^7.0.6",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^7.0.6",
    "@storybook/react-vite": "^7.0.6",
    "@storybook/theming": "^7.0.6",
    "@testing-library/dom": "^8.20.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/common-tags": "^1.8.1",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash.debounce": "^4.0.7",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@types/react-transition-group": "^4.4.5",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@vitejs/plugin-react": "^4.0.1",
    "@vitest/coverage-c8": "^0.29.2",
    "@vitest/ui": "^0.29.2",
    "babel-loader": "^8.3.0",
    "classnames": "^2.3.2",
    "common-tags": "^1.8.2",
    "dayjs": "^1.11.7",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-storybook": "^0.6.11",
    "husky": "^8.0.2",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.1.0",
    "lodash.debounce": "^4.0.8",
    "prettier": "^2.8.3",
    "react-custom-scrollbars-2": "^4.5.0",
    "react-imask": "^6.6.3",
    "react-merge-refs": "^2.0.2",
    "react-popper": "^2.3.0",
    "react-transition-group": "^4.4.5",
    "sass": "^1.63.6",
    "storybook": "^7.0.6",
    "storybook-addon-themes": "^6.1.0",
    "ts-node": "^10.9.1",
    "tscpaths": "^0.0.9",
    "typescript": "^4.6.4",
    "vite": "^4.3.9",
    "vite-plugin-svgr": "^2.4.0",
    "vitest": "^0.29.2"
  }
}
