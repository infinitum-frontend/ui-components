{
  "name": "@vinderman/ui-components",
  "version": "1.0.0",
  "scripts": {
    "build": "rm -rf dist && rm -rf types && vite build && tsc && npm run build-tokens",

    "build-storybook": "storybook build",
    "storybook": "storybook dev -p 6006",
    "build-tokens": "rm -rf dist/themes && ts-node themes/build/index.ts",
    "test": "vitest",
    "lint": "eslint --ext .tsx,.ts --ignore-pattern node_modules/ ./src/",
    "fix": "eslint --fix --ext .tsx,.ts --ignore-pattern node_modules/ ./src/",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{tsx,ts}": [
      "npm run lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/vinderman/ui-components.git"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "npm": ">=8.0.0 <9.0.0",
    "node": ">=16.0.0 <17.0.0"
  },
  "main": "dist/src/index.js",
  "module": "dist/src/index.mjs",
  "types": "types/src",
  "files": [
    "dist",
    "types/src"
  ],
  "dependencies": {
    "classnames": "^2.3.2",
    "lodash.debounce": "^4.0.8",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sass": "^1.56.1"
  },
  "sideEffects": false,
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@storybook/addon-a11y": "^7.0.0-beta.13",
    "@storybook/addon-actions": "^7.0.0-beta.13",
    "@storybook/addon-essentials": "^7.0.0-beta.13",
    "@storybook/addon-interactions": "^7.0.0-beta.13",
    "@storybook/addon-links": "^7.0.0-beta.13",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^7.0.0-beta.13",
    "@storybook/react-vite": "^7.0.0-beta.13",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@types/common-tags": "^1.8.1",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash.debounce": "^4.0.7",
    "@types/react": "^18.0.24",
    "@types/react-dom": "^18.0.8",
    "@typescript-eslint/eslint-plugin": "^5.45.1",
    "@vitejs/plugin-react": "^2.2.0",
    "babel-loader": "^8.3.0",
    "common-tags": "^1.8.2",
    "eslint": "^8.29.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.6.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.31.11",
    "husky": "^8.0.2",
    "jsdom": "^20.0.3",
    "lint-staged": "^13.1.0",
    "storybook": "^7.0.0-beta.13",
    "ts-node": "^10.9.1",
    "typescript": "^4.6.4",
    "vite": "^3.2.3",
    "vite-plugin-svgr": "^2.4.0",
    "vitest": "^0.25.7"
  }
}
